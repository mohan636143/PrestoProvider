<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Provider.Views.TestPage">
	<ContentPage.Content>
        
        <Grid>
            <ListView x:Name="lstViewTemp" AutomationId="Am_TestPage_ListView" 
                    SeparatorColor="Transparent" HasUnevenRows="true" SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate >
                        <ViewCell >
                            <Grid BackgroundColor="Black">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Text="{Binding LabelText}" TextColor="Silver" Grid.Row="0"/>
                            <Button AutomationId="Am_TestPage_ListView1" Text="{Binding ButtonText}" Command="{Binding ButtonCommand}" IsEnabled="{Binding BtnWorks}"
                                Grid.Row="1" WidthRequest="200" HeightRequest="40" BackgroundColor="Silver" TextColor="Red"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

	</ContentPage.Content>
</ContentPage>
